
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dalitang.sharepoint"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/paper_mario"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dalitang.sharepoint.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dalitang.sharepoint.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Splash"
            android:label="@string/paintings_web" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.dalitang.sharepoint.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
    </application>

</manifest>
